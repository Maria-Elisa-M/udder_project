def heat_plot(corr):
    fig = go.Figure(data=go.Heatmap(
                   z=corr,
                   x=corr.index,
                   y=corr.columns,
                   hoverongaps = False, colorbar=dict(tickvals=[-1,-0.5, -0.25,0,0.25, 0.5, 0.75, 1])))
    fig.update_layout(paper_bgcolor="black", font_color = "white", plot_bgcolor = "black")
    return fig


