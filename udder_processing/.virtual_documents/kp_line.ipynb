        fig, ((ax1, ax2), (ax3, ax4),(ax5, ax6), (ax7, ax8))= plt.subplots(4, 2,  figsize=(15, 20))
        udder_line_conv(img, udder_shp, rf_kp, lf_kp, ax1)
